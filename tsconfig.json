{
  "compilerOptions": {
    "baseUrl": "packages",
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "es6",
    "moduleResolution": "Node",
    "types": [
      "node",
      "webdriverio",
      "jasmine"
    ],
    "typeRoots": [
      "node_modules/@types",
      "packages/typings.d.ts"
    ],
    "outDir": "build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "files": [
    "packages/typings.d.ts"
  ],
  "include": [
    "packages/**/*.ts"
  ],
  "exclude": [
    "/node_modules/"
  ]
}